<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/detail_layout"
    tools:context=".DetailStudent"
    >

    <ImageView
        android:id="@+id/image_detail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/doctor"
        />
    <TextView
        android:id="@+id/text_name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Name Student"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/text_class_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_name_detail"
        android:text="ClassName"
        android:textSize="25sp"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/text_mssv_detai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_class_detail"
        android:text="MSSV"
        android:textSize="25sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_mssv_detai"
        android:layout_marginTop="100dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/button_cap_nhap_thong_tin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập Nhập Thông Tin"
            />
    </LinearLayout>

</RelativeLayout>